@model IEnumerable<BeyondCreator.Models.Weapon>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiceCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WeaponMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.damageBonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Durability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Firmness)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Dice.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiceCount)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.WeaponMaterial.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.damageBonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Durability)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Firmness)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                  
            </td>
        </tr>
}
    </tbody>
</table>
